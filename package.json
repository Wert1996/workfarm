{
  "name": "workfarm",
  "version": "0.1.0",
  "description": "Cognitive Operations System - A truthful interface for agent-driven work",
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "npm run build:electron && concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && NODE_ENV=development electron .",
    "build": "tsc -p tsconfig.electron.json && vite build",
    "build:electron": "tsc -p tsconfig.electron.json",
    "start": "npm run build && electron .",
    "package": "npm run build && electron-builder"
  },
  "dependencies": {
    "phaser": "^3.70.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^9.0.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.workfarm.app",
    "productName": "Work Farm",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "data/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
